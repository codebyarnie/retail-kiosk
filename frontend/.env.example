# Retail Kiosk Frontend - Environment Configuration Example
# Copy this file to .env and update the values as needed
# Vite exposes env vars that start with VITE_ to the client-side code

# =============================================================================
# API Configuration
# =============================================================================
# Backend API URL - should match the backend service location
# Development: http://localhost:8000
# Production: Update to your production API URL
VITE_API_URL=http://localhost:8000

# API prefix - used for constructing API endpoint URLs
VITE_API_PREFIX=/api

# =============================================================================
# Application Settings
# =============================================================================
# Application name displayed in the UI
VITE_APP_NAME=Retail Kiosk

# Application version
VITE_APP_VERSION=0.1.0

# Environment mode - development, staging, production
VITE_APP_ENV=development

# =============================================================================
# Feature Flags
# =============================================================================
# Enable debug mode with additional logging and developer tools
VITE_ENABLE_DEBUG=true

# Enable mock data for development (when backend is not available)
VITE_ENABLE_MOCK_DATA=false

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# =============================================================================
# UI/UX Configuration
# =============================================================================
# Default theme - light, dark, or system
VITE_DEFAULT_THEME=light

# Enable animations
VITE_ENABLE_ANIMATIONS=true

# Toast notification duration in milliseconds
VITE_TOAST_DURATION=5000

# =============================================================================
# Performance Settings
# =============================================================================
# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Number of retry attempts for failed API requests
VITE_API_RETRY_ATTEMPTS=3

# React Query cache time in milliseconds (default: 5 minutes)
VITE_CACHE_TIME=300000

# React Query stale time in milliseconds (default: 1 minute)
VITE_STALE_TIME=60000
